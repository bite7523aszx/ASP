@model WebApplication3.Models.Game_mall

@{
    ViewData["Title"] = "Create";
    Layout = "_Layout";
}

<h1 class="container text-center">新增遊戲</h1>

<div class="row">
    <div class="col-md-4 container text-center">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Game_name" class="control-label"></label>
                <input asp-for="Game_name" class="form-control" />
                <span asp-validation-for="Game_name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Game_category" class="control-label"></label>
                <input asp-for="Game_category" class="form-control" />
                <span asp-validation-for="Game_category" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Unit_price" class="control-label"></label>
                <input asp-for="Unit_price" class="form-control" />
                <span asp-validation-for="Unit_price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Listing_date" class="control-label"></label>
                <input asp-for="Listing_date" class="form-control" />
                <span asp-validation-for="Listing_date" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="新增遊戲" class="btn btn-primary" />
                <br />
                <a asp-action="Index">回首頁</a>
            </div>
        </form>
    </div>
</div>



