@model WebApplication3.Models.Game_mall

@{
    ViewData["Title"] = "Delete";
    Layout = "_Layout";
}
<div class="container  text-center">
    <h3>確定是否刪除?</h3>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Game_name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Game_name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Game_category)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Game_category)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Unit_price)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Unit_price)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Listing_date)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Listing_date)
        </dd>
    </dl>

    <form class="container text-center" asp-action="Delete">
        <input type="hidden" asp-for="Game_number" />
        <input type="submit" value="刪除遊戲" onclick="return confirm('確定刪除')" class="btn btn-danger" /> |
        <a asp-action="Index">回首頁</a>
    </form>
</div>
