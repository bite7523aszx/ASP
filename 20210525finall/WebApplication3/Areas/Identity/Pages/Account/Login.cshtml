@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
    Layout = "_AuthLayout.cshtml";
}
<style>
    .form-control {
        border: solid;
        padding: 15px 20px;
        border-radius: 25px;
        width: 100%;
    }
</style>

@*<h1>@ViewData["Title"]</h1>*@
@*<div class="container" style="background-color:white">*@
<div class="container text-center">
    <img src="~/img/Game_index/user.png" />
    <div class="row">
        <div class="col-md-10  col-lg-10   container">
            <form id="account" method="post" class="sign-in ">
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-group ">
                    <label asp-for="Input.Email" class=""></label>
                    <div class="input-group">
                        <div class="input-group-text">
                            <img src="~/img/Game_index/email.png"/>
                        </div>
                        <input asp-for="Input.Email" class="form-control " autofocus placeholder="輸入電子郵件" />
                    </div>
                    @*<label asp-for="Input.Email"></label>*@
                    @*<input asp-for="Input.Email" class="form-control" />*@
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Input.Password" class=""></label>
                    <div class="input-group">
                        <div class="input-group-text">
                            <img src="~/img/Game_index/padlock.png" />
                        </div>
                        <input asp-for="Input.Password" class="form-control " type="password" placeholder="輸入密碼" />
                    </div>
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
                <div class="form-group container">
                    <div class="checkbox">
                        <label asp-for="Input.RememberMe" >
                            <input asp-for="Input.RememberMe" />
                            @Html.DisplayNameFor(m => m.Input.RememberMe)
                        </label>
                    </div>
                </div>
                <div class="form-group container">
                    <button type="submit" class="btn btn-primary">登入</button>
                </div>
                @*<div class="form-group">
                        <p>
                            <a id="forgot-password" asp-page="./ForgotPassword">Forgot your password?</a>
                        </p>
                        <p>
                            <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Register as a new user</a>
                        </p>
                    </div>*@
            </form>
        </div>
    </div>
</div>
